{
  "name": "ipay-buttons",
  "version": "1.4.0",
  "description": "Beautiful payment buttons for all frameworks",
  "main": "dist/index.umd.js",
  "module": "dist/index.js",
  "types": "index.d.ts",
  "files": [
    "dist",
    "index.d.ts",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.js",
      "types": "./index.d.ts"
    },
    "./ipay-button": {
      "import": "./dist/components/ipay-button.js",
      "types": "./index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "type": "module",
  "scripts": {
    "build": "rollup -c",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@rollup/plugin-terser": "^0.4.4",
    "glob": "^10.4.5",
    "rollup": "^3.29.5"
  }
}
